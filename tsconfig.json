{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2022",
        "lib": ["ES2022", "DOM"],
        // "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "_dist/tsc",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
    },
    "include": ["_src/**/*"],
}